<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="cover"
                               widget="image"
                               class="oe_avatar"
                               options="{'preview_image':'cover'}"
                               style="max-width:200px; max-height=200px"/>
                        <field name="title"/>
                        <field name="available"/>
                        <field name="datePost"/>
                        <field name="category"/>
                        <field name="author"/>
                        <field name="capitalizeTitle"/>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <group>
                                <group>
                                    <p>Aqui Vem texto</p>
                                </group>
                                <group>
                                    <p>Aqui Vem texto 2</p>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title"/>
                <field name="available"/>
                <field name="datePost"/>
            </tree>
        </field>
    </record>

    <record id="view_library_book_filter" model="ir.ui.view">
        <field name="name">library.book.filter</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <filter name="available_books"
                        string="Available"
                        domain="[('available', '=', True)]"/>
                <filter name="unavailable_books"
                        string="Unavailable"
                        domain="[('available', '=', False)]" context="{'default_available': True}"/>
            </search>
        </field>
    </record>

    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Book</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>

    <menuitem id="menu_book"
              name="Livros"
              action="action_library_book"
              parent="menu_library_operations"
              sequence="10"/>
</odoo>